{
  "compilerOptions": {
    "target": "ES2020",
    "module":"NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop":true,
    "moduleResolution": "nodenext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["jest"]
  },
  "exclude": ["node_modules"],
  "include": ["src", "tests"]
}